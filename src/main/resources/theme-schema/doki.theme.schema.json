{
  "version": "1.0",
  "definitions": {
    "color": {
      "type": "string",
      "pattern": "^#[0-9a-fA-F]{6}([0-9a-fA-F]{2})?$",
      "title": "Color",
      "description": "Color in #RRGGBB format",
      "examples": [
        "#123abc"
      ]
    },
    "sticker": {
      "type": "string",
      "pattern": "^.+\\.png$",
      "title": "Sticker File Name",
      "description": "The name of the background image that is in the same directory as the definition",
      "default": "just_monika.png",
      "examples": [
        "just_monika.png"
      ]
    }
  },
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "required": [
    "id",
    "name",
    "displayName",
    "dark",
    "author",
    "stickers",
    "group",
    "ui"
  ],
  "properties": {
    "id": {
      "type": "string",
      "title": "Theme Id",
      "description": "Unique Identifier for the theme.",
      "default": "",
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$",
      "examples": [
        "91415015-8fe3-48eb-9951-70a5cd6cbb7f",
        "a14733d6-8e15-4e75-b6b8-509f323e5b3b"
      ]
    },
    "name": {
      "type": "string",
      "title": "Theme name",
      "description": "Theme name",
      "default": "",
      "examples": [
        "My Brand New Theme"
      ]
    },
    "displayName": {
      "type": "string",
      "title": "Display name",
      "description": "The name used in various theme components such as the Status Bar",
      "default": "",
      "examples": [
        "Just Monika"
      ]
    },
    "dark": {
      "type": "boolean",
      "title": "Dark theme",
      "description": "If 'true' then Darcula theme will be used as the base for modification, otherwise Light theme will be used.",
      "default": false,
      "examples": [
        true
      ]
    },
    "author": {
      "type": "string",
      "title": "Theme author",
      "description": "The author of the theme",
      "default": "",
      "examples": [
        "Leroy Jenkins"
      ]
    },
    "editorScheme": {
      "type": "object",
      "title": "The code colors",
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "type": "string",
          "description": "How you want to create the theme xml file.",
          "pattern": "(templateExtension)|(template)|(custom)",
          "default": "template",
          "examples": [
            "template",
            "templateExtension",
            "custom"
          ]
        },
        "file": {
          "type": "string",
          "description": "The name of the file you want to extend, take as template, or use directly.",
          "pattern": "^.+\\.xml$",
          "examples": [
            "Doki Light",
            "Doki Dark",
            "Natsuki_Light.xml",
            "Yuri_Dark.xml"
          ],
          "default": "Doki Light.xml"
        }
      }
    },
    "ui": {
      "type": "object"
    },
    "group": {
      "type": "string",
      "title": "Theme Group",
      "description": "The group the theme belongs to",
      "default": "",
      "examples": [
        "Literature Club"
      ]
    },
    "stickers": {
      "type": "object",
      "required": [
        "default"
      ],
      "title": "Sticker",
      "description": "The image reference to the sticker for the bottom right hand corner.",
      "properties": {
        "default": {
          "$ref": "#/definitions/sticker"
        }      ,
        "secondary": {
          "$ref": "#/definitions/sticker"
        }
      }
    },
    "icons": {
      "type": "object",
      "patternProperties": {
        "^/": {
          "type": "string",
          "pattern": "^/"
        },
        "^[^/]": {
          "type": "object",
          "patternProperties": {
            "^/": {
              "type": "string",
              "pattern": "^/"
            }
          }
        }
      },
      "properties": {
        "ColorPalette": {
          "type": "object",
          "properties": {
            "Actions.Red": {
              "$ref": "#/definitions/color",
              "description": "Action colors are for icons that appear on toolbars"
            },
